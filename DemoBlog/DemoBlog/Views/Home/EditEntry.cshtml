
@model DemoBlog.Models.Entry

@{
    ViewBag.Title = "EditEntry";
}

<h2>Edit Entry</h2>
<div class="col-md-8">
    @using (Html.BeginForm("EditEntry", "Home", FormMethod.Post, new { role = "form" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                <input class="form-control" name="@Html.NameFor(m=>m.Title)" type="text" value="@Model.Title" />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content)
                <textarea class="form-control" name="@Html.NameFor(m=>m.Content)" rows="4">@Html.Raw(Model.Content)</textarea>
            </div>
        </fieldset>

        <a class="btn btn-default" href="\Home\Entry\@Model.Slug">Cancel</a>
        <input class="btn btn-primary" type="submit" value="Save" />
    }
</div>